
<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <form class="row" action="/tutor" method="get">
        <div class="col-11">
          <input class="form-control" type="text" placeholder="name" name="keyword" value="{{keywords}}">
        </div>
        <div class="col-1">
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
        </div>
      </form>
      <div class="row row-cols-sm-3 mt-5">
        {{#each teachers}}
          <div class="col-md-4">
            <a class="btn" href="/teacherProfileForStudent/{{this.id}}">
            <div class="card mb-3 shadow-sm"  style="height: 200px">
              <div class="row g-0">
                <div class="col-md-5">
                  <img class="card-img-top" src="{{this.avatar}}" alt="{{this.name}}">
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p>{{this.teachStyle}}</p>
                  </div>
                </div>
              </div>
            </div>
            </a>
          </div>
        {{/each}}
      </div>
      <nav class="mt-3" aria-label="page navigation">
        <ul class="pagination ">
          <li class="page-item {{#ifEqual pagination.currentPage 1}}disabled{{/ifEqual}}">
            <a class="page-link" href="tutor?page={{pagination.prev}}&keyword={{../keywords}}" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          {{#each pagination.pages}}
          {{#ifEqual this ../pagination.currentPage}}
          <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
          {{else}}
          <li class="page-item">
            <a class="page-link" href="tutor?page={{this}}&keyword={{../keywords}}">{{this}}</a>
          </li>
          {{/ifEqual}}
          {{/each}}
          <li class="page-item {{#ifEqual pagination.currentPage pagination.totalPage}}disabled{{/ifEqual}}">
            <a class="page-link" href="tutor?page={{pagination.next}}&keyword={{../keywords}}" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="col-md-2 col-3 mx-auto border border-dark p-3">
      <h4 class="mb-3">學習時數總排行</h4>
      {{#each students}}
        <img src="{{this.avatar}}" alt="" style="width: 50%;">
        <div class="mb-3">No.{{this.rank}}  {{this.name}}</div>
      {{/each}}
    </div>
  </div>
</div>

